root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{json,yml}]
indent_style = space
indent_size = 2

[*.{ts,js,tsx,jsx}]
indent_style = space
indent_size = 4

[*.{md,html}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 4

[*.bat]
end_of_line = crlf

[*.tsv]
indent_style = tab
