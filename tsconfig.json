{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "types": ["node"],
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "noResolve": false,
        "sourceMap": true,
        "allowJs": true
    },
    "include": ["src/**/*.ts", "tests/**/*.ts"],
    "exclude":[
        "./node_modules",
        "./docs",
        ".vscode"
    ]
}
